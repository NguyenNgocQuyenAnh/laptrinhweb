
@{
    ViewBag.Title = "Quản lý mặt hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group">
                <input type="text" name="searchValueCategory" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>
                    <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>
        <!-- kết quả tìm kiếm-->
        <p style="margin-top:10px;">
            có <strong>1,801</strong> mặt hàng trên tổng số <strong>100</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" ">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên hàng</th>
                        <th>Đơn vị</th>
                        <th>Giá</th>
                        <th>Ảnh</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>Chef Anton's Cajun Seasoning</td>
                            <td>48 - 6 oz jars</td>
                            <td>22.0000</td>
                            <td>
                               <img href="https://dummyimage.com/250x250.png/cc0000/ffffff&text=Product%20Photo"/>
                            </td>
                            <td>
                                <a href="~/Product/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Product/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>



