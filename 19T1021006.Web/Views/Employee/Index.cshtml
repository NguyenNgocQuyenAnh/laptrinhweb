
@{
    ViewBag.Title = "Quản lý nhân viên";
}
<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group">
                <input type="text" name="searchValueCategory" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>
                    <a href="~/Employee/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>
        <!-- kết quả tìm kiếm-->
        <p style="margin-top:10px;">
            có <strong>1,801</strong> nhân viên trên tổng số <strong>100</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" ">
                <thead>
                    <tr class="bg-primary">
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Ngày sinh</th>
                        <th>Ảnh</th>
                        <th>Ghi chú</th>
                        <th>Email</th>
                        <th>Mật khẩu</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>Nguyễn</td>
                            <td>Anh</td>
                            <td>01/08/2001</td>
                            <td>
                                <div > 
                                <img src="https://dummyimage.com/250x250.png/cc0000/ffffff&text=Product%20Photo" style="font-size:xx-small;" /></div>
                            </td>
                            <td>nhân viên 1</td>
                            <td>nnquyenanh@gmail.com</td>
                            <td>02341</td>
                            <td>
                                <a href="~/Employee/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Employee/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>



