
@{
    ViewBag.Title = "Quản lý khách hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <!--form tìm kiếm-->
        <form>
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>
                    <a href="~/Customer/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>
        <!-- kết quả tìm kiếm-->
        <p style="margin-top:10px;">
            có <strong>543</strong> khách hàng trên tổng số <strong>100</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" ">
                <thead>
                    <tr class="bg-primary">
                        <th>Họ tên</th>
                        <th>Tên riêng</th>
                        <th>Địa chỉ</th>
                        <th>Email</th>
                        <th>Mật khẩu</th>
                        <th>Thành phố</th>
                        <th>Quốc gia</th>
                        <th>Mã bưu chính</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>Nguyễn Ngọc Quyền Anh</td>
                            <td>Rôn</td>
                            <td>77 Nguyễn Huệ</td>
                            <td>nnquyenanh@gmail.com</td>
                            <td>12345</td>
                            <td>Thành phố Huế</td>
                            <td>Việt Nam</td>
                            <td>0234</td>
                            <td>
                                <a href="~/Customer/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Customer/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>


