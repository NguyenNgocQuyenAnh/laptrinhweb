
@{
    ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">Beverages</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">Soft drinks, coffees, teas, beers, and ales</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default btn-danger" style="color:white">
                        <i class="glyphicon glyphicon-floppy-disk"></i>Xóa dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning" style="margin-left:5px">Quay lại</a>
                </div>
            </div>

        </form>
    </div>
</div>

